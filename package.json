{
  "name": "image-viewer",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main/index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "start": "npm run build:main && concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "set NODE_ENV=development&& electron .",
    "dev:renderer": "webpack serve --config webpack.config.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --config webpack.config.js",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sacchin/image-viewer.git"
  },
